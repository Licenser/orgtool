{{#bs-modal fade=false size='xl' open=showDialog header=false body=false footer=false closeAction='close' }}
  {{#bs-modal-header}}
<!--     <div class="member-name-hdr"> -->
      <h4>
        {{#if member.name}} {{member.name}} {{else}} &nbsp; {{/if}}
      </h4>
<!--     </div> -->
  {{/bs-modal-header}}

  {{#bs-modal-body}}
    <div class="row">

      <div class="col-md-2">
        <div class="member-avatar">
          <button type="button" class="btn btn-default btn-xs add-ship-button" {{action "changeAvatar" member}} disabled=true> <i class="fa fa-edit" ></i> Edit</button>
          {{#if member.avatar}}
            <img class="member-avatar-img" src={{member.avatar}}>
          {{else}}
            <img class="member-avatar-img" src="https://robertsspaceindustries.com/rsi/static/images/account/avatar_default.jpg">
          {{/if}}
        </div>
      </div>

      <div class="col-md-2">
        <label class="control-label">Name</label>
        {{input type="text" class="form-control" value=member.name readonly=(not session.isAdmin)}}
        <label class="control-label">Timezone UTC</label>
        {{input type="number" class="form-control" value=member.timezone readonly=(not session.isUser)}}
      </div>

      <div class="col-md-3 verticalLine">
        <div class="row">
          <table class="table member-handles">
            <thead>
              <tr>
                <th>Service</th>
                <th>Handle</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <img src="http://vignette3.wikia.nocookie.net/siivagunner/images/9/9f/Discord_icon.svg" style="width:20px;height:20px">
                  <b>Discord</b></td>
                <td>{{member.handle}}</td>
              </tr>
              <tr>
                <td>
                  <img src="https://robertsspaceindustries.com/media/tb6ui8j38wwscr/icon/RSI.png" style="width:20px;height:20px">
                  <b>RSI Handle</b></td>
                <td>{{member.handle}}</td>
              </tr>
              <tr>
                <td>
                  <img src="http://icons.iconarchive.com/icons/martz90/circle/24/steam-icon.png" style="width:20px;height:20px">
                  <b>Steam</b></td>
                <td>{{member.handle}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>


      <div class="col-md-2 verticalLine">
        <div class="row">
        <label class="control-label">Units: {{member.memberUnits.length}}</label>
        <div>
          {{#each member.memberUnits as |memUn|}}
          {{memUn.unit.name}}<br>
          {{/each}}
        </div>
        </div>
      </div>
      
      <div class="col-md-2 verticalLine">
        <div class="row">
        <label class="control-label">Games: 1</label>
<!--         <button type="button" class="btn btn-default btn-xs pull-right add-ship-button" {{action "addGame" member}} disabled={{if currShip "disabled"}}> <i class="fa fa-plus" ></i> Add Game</button> -->
        <button type="button" class="btn btn-default btn-xs pull-right add-ship-button" {{action "addGame" member}} disabled=true> <i class="fa fa-plus" ></i> Add Game</button>
        <div>
          <img src="https://upload.wikimedia.org/wikipedia/en/9/91/Star_Citizen_logo.png" style="width:20px;height:20px">
          Star Citizen
        </div>
      </div>
      </div>
    </div>

    <div class="row">
      <hr>
    </div>

    <div class="row">
      <div class="col-md-6 verticalLine">
        <label class="control-label">Items: {{member.ships.length}}</label>
        <button type="button" class="btn btn-default btn-xs" > <i class="fa fa-gear" ></i> Ships</button>
        <button type="button" class="btn btn-default btn-xs" disabled=true> <i class="fa fa-gear" ></i> Vehicels</button>
        <button type="button" class="btn btn-default btn-xs" disabled=true> <i class="fa fa-gear" ></i> Weapons</button>
        <button type="button" class="btn btn-default btn-xs" disabled=true> <i class="fa fa-gear" ></i> Dinos</button>
        Show Hidden
        {{bs-switch size='mini' checked=false indeterminate=false disabled=true}}

        <button type="button" class="btn btn-default btn-xs pull-right add-ship-button" {{action "addShip" member}} disabled=true> <i class="fa fa-plus" ></i> Add Item</button>
        <div style=clear:both;></div>
        <div class="item-list">
          {{#each member.ships as |ship|}}
            <div class="col-md-4">
              {{ship-model-details ship=ship.model name=ship.name}}
            </div>
          {{/each}}

        </div>
      </div>


        <div class="col-md-3 verticalLine">

          <label class="control-label">Gametime Schedule:</label>
          <button type="button" class="btn btn-default btn-xs add-ship-button" {{action "addTime" member}} disabled=true> <i class="fa fa-plus" ></i> Add Time</button>
          <div style=clear:both;></div>
          

          <div class="member-time">
            <div style="font-weight: bold;">Sunday</div><br>
            18:00 - 20:00 <a href="#" class="text-info" {{action "editShip" ship}}>{{fa-icon "edit"}}</a> <a href="#" class="text-danger" {{action "meldShip" ship}}>{{fa-icon "remove"}}</a>
          </div>                                                                     
          <!--
          <div class="member-time">
