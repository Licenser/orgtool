<!--             </div> -->
<!--             <div class="col-md-6"> -->
              <label class="control-label">Achievements</label><br><br>
<!--             </div> -->
        </div>

    </div>


  {{/bs-modal-body}}

  {{#bs-modal-footer}}
    <button type="button" class="btn btn-default" {{action "close"}}>Close</button>

    {{#if (and member.hasDirtyAttributes session.isAdmin)}}
      <button type="submit" class="btn btn-primary">{{fa-icon "save"}} Save</button>
    {{/if}}

    {{#if session.isAdmin}}
      <button type="submit" class="btn btn-danger pull-right" {{action "deleteMember" member}}>{{fa-icon "remove"}} Delete</button>
    {{/if}}
