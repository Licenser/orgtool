{{#bs-modal fade=false open=showDialog header=false body=false footer=false onHide=(action 'close') as |md|}}
{{#md.header}}
<!--     <div class="member-avatar"> -->
  <h4 class="modal-title">
      {{#if model.img}}
        <img class="member-avatar-img" style="width:42px;" src={{model.img}}>
      {{/if}}
<!--     </div> -->
<!--     <div class="member-name-hdr"> -->
<!--     </div> -->
    {{#if model.isNew}} Create {{else}} Edit {{/if}}
    Unit
  </h4>
{{/md.header}}
  {{#md.body}}
    {{#bs-form action=(action "submit") model=model as |form|}}
      {{form.element controlType="text" label="Name" property="name"}}
      {{form.element controlType="text" label="Description" property="description"}}
      {{form.element controlType="text" label="Color" property="color"}}
      {{form.element controlType="text" label="Image" property="img"}}

      <label class="control-label">Type</label>
      <div class="input-group">

        <input type="text" class="form-control" id="unittype" value={{model.type.name}} readonly>
        <div class="input-group-btn">
          {{#bs-dropdown as |dd|}}
            {{#dd.button}}<span class="caret"></span>{{/dd.button}}
            {{#dd.menu  align="right"}}
              {{#each unitTypes as |ut|}}
              <li {{action "setType" ut}}><a href="#" class={{if (eq ut.id model.type.id) "active"}} >{{ut.name}}</a></li>
              {{/each}}
            {{/dd.menu}}
          {{/bs-dropdown}}
        </div>
      </div>
      {{/bs-form}}
      <br>
      <br>
      <br>
      <br>
    {{/md.body}}
    {{#md.footer}}
<!--     <button type="submit" class="btn btn-danger" {{action "deleteRewardType"}} disabled={{rt.isSaving}}> Delete </button> -->
    <button type="submit" class="btn btn-primary" {{action "submit"}} disabled={{if model.type.id false true}} > {{#if model.hasDirtyAttributes}} Save {{else}} Ok {{/if}} </button>
    <button type="button" class="btn btn-default" {{action "close"}}>Close</button>

<!--         <button type="button" class="btn btn-default" {{action "close"}}>Close</button> -->
<!--         {{#if (and model.hasDirtyAttributes session.isAdmin)}} -->
<!--           <button type="submit" class="btn btn-primary">Save</button> -->
<!--         {{/if}} -->
    {{/md.footer}}
{{/bs-modal}}
