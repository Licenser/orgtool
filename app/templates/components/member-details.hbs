<div class="member-details {{if canDrag "member-details-draggable"}}">
  {{#if member.avatar}}
    <img class="member-avatar" src={{concat-string "https://robertsspaceindustries.com" member.avatar}}>
  {{else}}
    <img class="member-avatar" src="https://robertsspaceindustries.com/rsi/static/images/account/avatar_default.jpg">
  {{/if}}
  <div class="member-box">
      <div class="member-info">
        <div class="member-name">
          {{member.name}}
        </div>

        <div class="member-remove">
          <div class="member-stats">
            {{#if member.ships.length}}
            s: {{member.ships.length}}
            {{/if}}
            {{#if member.memberUnits.length}}
            u: {{member.memberUnits.length}}
            {{/if}}

            {{#bs-dropdown class="member-options"}}
              {{#bs-dropdown-toggle}}
                {{fa-icon "caret-down"}}
              {{/bs-dropdown-toggle}}
              {{#bs-dropdown-menu class="pull-right"}}
                {{#if canUnassign}}
                  <li><a href="#" class="text-danger" {{action 'unassignMember' member unitid}}>{{fa-icon "close"}} Unassign</a></li>
                {{/if}}
                <li>
                  {{#link-to 'members.member' member.id}}
                  {{fa-icon "user"}} Profile
                  {{/link-to}}
                </li>
              {{/bs-dropdown-menu}}
            {{/bs-dropdown}}
          </div>
        </div>
      </div>
      <div class="member-rank">
        {{member.rank}}
      </div>
  </div>

  {{yield}}
</div>

